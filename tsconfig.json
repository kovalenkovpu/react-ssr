{
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["client/**/*", "server/**/*"]
}